{
  "expo": {
    "name": "DreamToon",
    "slug": "DreamToon",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/ToonIcon.png",
    "userInterfaceStyle": "light",
    "scheme": "dreamtoon",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.minks.dreamtoon",
      "buildNumber": "3",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app needs access to microphone to record your dreams.",
        "NSCameraUsageDescription": "This app may need camera access for future features.",
        "NSPhotoLibraryUsageDescription": "This app needs access to photo library to save comic panels."
      },
      "appStoreUrl": "https://apps.apple.com/app/dreamtoon/id6747994787",
      "privacyPolicyUrl": "https://your-privacy-policy-url.com"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.anonymous.mobile",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          }
        }
      ],
      "expo-router",
      "expo-media-library",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "f90a1f67-a1d1-4942-ab7e-f984e2bf717e"
      }
    },
    "description": "Transform your dreams into stunning comic panels with AI-powered storytelling",
    "keywords": ["dream", "comic", "ai", "storytelling", "art", "creative"]
  }
}
